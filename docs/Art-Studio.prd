// Extend existing activity preferences system
const useArtStudioPreferences = () => {
  const { preferences, updatePreference } = useActivityPreferences();
  
  const updateActivityImage = useCallback(async (
    activityId: string, 
    imageData: ImageCustomization
  ) => {
    await updatePreference(activityId, {
      ...preferences[activityId],
      customImage: imageData.url,
      imageSource: imageData.source,
      imagePrompt: imageData.prompt
    });
  }, [preferences, updatePreference]);
  
  return { updateActivityImage };
};
